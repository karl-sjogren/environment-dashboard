{{scroll-top}}
<div class="page account">
  <section class="user-info">  
    <h1>API key</h1>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input type='text' id='name' value=model.name}}
      </div>

      <div class="form-group">
        <label for="email">Contact email</label>
        {{input type='text' id='email' value=model.email autocomplete='email'}}
      </div>

      {{#if apiKeyChanged}}
        <span class="alert alert-good-stuff-happened">Your changes were saved.</span>
      {{/if}}

      {{#if apiKeyChangeFailed}}
        <span class="alert alert-error">Something went wrong while saving the changes.</span>
      {{/if}}

      <button class="btn-primary" {{action 'save'}}>Save</button>
    </form>
  </section>
</div>