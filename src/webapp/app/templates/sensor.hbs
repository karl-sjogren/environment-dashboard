{{scroll-top}}
<div class="page sensor">
  <section>  
    <h1>Sensor</h1>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input type='text' id='name' value=model.name}}
      </div>

      <div class="form-group">
        <label for="type">Type</label>
        {{#x-select value=model.type action=(action 'selectType') as |xs|}}
          {{#xs.option value='temperature'}}Temperature{{/xs.option}}
          {{#xs.option value='rain'}}Rain{{/xs.option}}
        {{/x-select}}
      </div>

      {{#if sensorChanged}}
        <span class="alert alert-good-stuff-happened">Your changes were saved.</span>
      {{/if}}

      {{#if sensorChangeFailed}}
        <span class="alert alert-error">Something went wrong while saving the changes.</span>
      {{/if}}

      <button class="btn-primary" {{action 'save'}}>Save</button>
    </form>
  </section>
</div>